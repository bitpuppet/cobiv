#:kivy 1.9.1
#:import HUD cobiv.hud
#:import win kivy.core.window



<MainContainer>:
    cmd_input: cmd_input
    current_view: current_view
    hud_layout: hud
    modal_hud_layout: hud_modal
    notification_hud_layout: hud_notification

    size_hint: 1,1
    GridLayout:
        cols: 1
        id: current_view
        size_hint: 1,1
        size: root.size

    TextInput:
        id: cmd_input
        text: ""
        multiline: False
        size_hint: 1,None
        height: self.minimum_height
        background_color: 0,0,0,0.2
        foreground_color: 1,1,1,1
        on_focus: root.on_cmd_focus(args[0],args[1])
        on_text_validate: root.on_enter_cmd(self.text)

    HUD:
        id: hud
        visible: True

    HUD:
        id: hud_modal
        AnchorLayout:
            anchor_x: "center"
            anchor_y: "center"
            Widget:
                canvas:
                    Color:
                        rgba: .5,.5,.5,.9
                    Rectangle:
                        pos: 0,0
                        size: root.size

    TouchButton:
        id: touch_switcher

    NotificationHUD:
        id: hud_notification
        visible: True